QPushButton {
	color: #000;
	background-color: #EEE;
	border: 1px solid #CCC;
	border-radius: 5px;
    padding-top: 6px;
    padding-bottom: 6px;
    padding-left: 12px;
    padding-right: 12px;
    margin-top: 3px;
    margin-bottom:3px;
	font-size: 13px;
	text-align: center;
}

QPushButton:hover {
	background-color: #BBB;
}

QPushButton:pressed {
    background-color: #555;
}

QPushButton:checked {
    color: #AAA;
    background-color: #777;
}
